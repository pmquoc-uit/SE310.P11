 *@
@{
    ViewData["Title"] = "DanhMucSanPham";
    Layout = "~/Areas/Admin/Views/_LayoutAdmin.cshtml";
}
@using ValiStore.Models
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<TDanhMucSp>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Danh mục các sản phẩm</h2>

<p>
    <a asp-action="ThemSanPhamMoi">Thêm Sản Phẩm Mới</a>
</p>
<p>@TempData["Message"]</p>
<table class="table">
    <thead>
        <tr class="table-warning">
            <th>
                @Html.DisplayNameFor(model => model[0].TenSp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].CanNang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].DoNoi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].ThoiGianBaoHanh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].ChietKhau)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].GiaNhoNhat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].GiaLonNhat)
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            string @cls = "table-success";
        }
        @foreach (var item in Model) {
            i = i + 1;
            cls = "table-success";
            if (i%2 == 0)
            {
                cls="table-primary";
            }
            <tr class="@cls">
                    <td>
                        @Html.DisplayFor(modelItem => item.TenSp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CanNang)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DoNoi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ThoiGianBaoHanh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GiaNhoNhat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GiaLonNhat)
                    </td>
                    <td>
                        <a asp-action="SuaSanPham" asp-route-maSanPham="@item.MaSp">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.MaSp">Details</a> |
                        <a asp-action="XoaSanPham" asp-route-maSanPham="@item.MaSp">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
@Html.PagedListPager(Model,page => Url.Action("DanhMucSanPham", new {page=page}),
    new X.PagedList.Mvc.Core.PagedListRenderOptions()
    {
    LiElementClasses= new List<String>{"page-item"},
    PageClasses=new List<String> {"page-link"}
    })
